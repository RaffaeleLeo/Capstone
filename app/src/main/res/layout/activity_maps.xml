<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maps"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".MapsActivity">
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/compass"
            android:id = "@+id/compass_button"
           />
    </fragment>




    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/tabs_default_color"
        app:tabBackground="@color/colorPrimaryDark">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/TabUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_live_updates"
            android:textColor="@color/tabs_default_color" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:id="@+id/TabMap"
            android:layout_height="wrap_content"
            android:textColor="@color/tabs_default_color"
            android:text="@string/nav_map" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/TabStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tabs_default_color"
            android:text="@string/nav_journal" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/TabGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/tabs_default_color"
            android:text="@string/nav_chat" />
    </com.google.android.material.tabs.TabLayout>

</LinearLayout>